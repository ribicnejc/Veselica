<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5">


        <ImageView
            android:id="@+id/image_view_item_thumbnail"
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            tools:src="@drawable/to_delete_thumbnail" />

        <TextView
            android:id="@+id/text_view_video_title_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/image_view_item_thumbnail"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="Ansambel Gadi - Tebe čakam" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
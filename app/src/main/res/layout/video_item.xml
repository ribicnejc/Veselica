<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSmokeGray"
        android:foreground="@drawable/ripple"
        android:weightSum="5">

        <RelativeLayout
            android:id="@+id/thumb_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/image_view_item_thumbnail"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="5dp"
                tools:src="@drawable/to_delete_thumbnail" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:background="@drawable/icon_youtube" />

        </RelativeLayout>

        <TextView
            android:id="@+id/text_view_video_title_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@id/thumb_frame"
            android:padding="5dp"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            tools:text="Ansambel Gadi - Tebe čakam" />

    </RelativeLayout>
</android.support.v7.widget.CardView>